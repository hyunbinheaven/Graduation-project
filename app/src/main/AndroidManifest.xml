<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.Greenland">
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Greenland"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JavaLogin"
        android:background="#66c971"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config"
        >

        <activity
            android:name=".Login.LoginActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".UserPostsActivity"/>
        <activity android:name=".Farm.FarmRegistrationActivity"/>
        <activity android:name=".Farm.FarmDetailActivity"/>
        <activity android:name=".Farm.FarmEditActivity"/>
        <activity android:name=".Login.SignUpActivity"/>
        <activity android:name=".Login.SearchPassword"
            />
        <activity android:name=".SellPage.SoldEdit"/>"
        <activity android:name=".BottomNavi.HomeFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".BottomNavi.ChatFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".BottomNavi.myPageFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".BottomNavi.GraphFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".BottomNavi.FarmFragment"
            tools:ignore="Instantiatable" />
        <activity android:name=".SellPage.SoldPage"/>
        <activity android:name=".SellPage.SoldDetailPage"/>
        <activity android:name=".SellPage.PicActivity"/>
        <activity android:name=".InfoEdit.EditUserActivity"/>
        <activity android:name=".InfoEdit.EditPasswordActivity"/>
        <activity android:name=".ChatRoomActivity"/>

        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID" android:value="ca-app-pub-3940256099942544~3347511713"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>
</manifest>